<Content type="html" view="home">
<![CDATA[
<style>
    #content {
        margin-left: 5px;
    }
    #wrapper {
        display: none;
    }
    #content p.link {
        margin: 0px;
        text-align: right;
        cursor: pointer
    }
    #content h5{
        border-left:3px solid #666666;
        color:#666666;
        font-size:0.8em;
        font-weight:bold;
        line-height:120%;
        margin:0 10px 10px 0px;
        padding:0 0 0 5px;
    }
    #content p#kouho{
        line-height:110%;
        font-size:0.8em;
        margin:5px 20px 10px 5px;
    }
    #content p a {
        color : #A46702;
        font-size: 0.8em;
        text-decoration: none;
    } 
    #content ul {
        font-size:0.8em;
        margin:5px 20px 10px 5px;
        padding-left: 20px;
    }
    #content span.info{
        color: red;
        margin: 0 2px 0 2px;
    }
